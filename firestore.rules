rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function cartShapeIsValid() {
      return !request.resource.data.keys().hasAny(["cart"]) ||
        request.resource.data.cart is list;
    }

    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();

      allow create: if isAdmin() || (
        isOwner(userId) &&
        request.resource.data.uid == request.auth.uid &&
        request.resource.data.keys().hasOnly([
          "uid",
          "email",
          "displayName",
          "photoURL",
          "createdAt",
          "cart"
        ]) &&
        cartShapeIsValid()
      );

      allow update: if isAdmin() || (
        isOwner(userId) &&
        request.resource.data.uid == resource.data.uid &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly([
          "email",
          "displayName",
          "photoURL",
          "cart"
        ]) &&
        cartShapeIsValid()
      );

      allow delete: if false;
    }

    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /orders/{orderId} {
      allow read: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.status == "paid"
        && request.resource.data.keys().hasAll([
          "userId", "razorpayOrderId", "razorpayPaymentId",
          "items", "amount", "currency", "status",
          "shippingAddress", "createdAt"
        ]);
      allow update, delete: if false;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
